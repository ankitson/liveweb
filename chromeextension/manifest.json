{
  "name": "Live Web",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Realtime edits on the web",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page":"background.html",
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"], 
      "css": ["annotations.css", "jquery-annotate/jquery.annotate.css"],
      "js": ["contentscript.js", "jquery-1.8.2.min.js", "getpath.js",
             "jquery-annotate/jquery.annotate.js", "jquery-annotate/jquery.annotate.min.js"]
    }
  ],
  "permissions": [
    "tabs",
    "http://*.facebook.com/*"
  ]
}
